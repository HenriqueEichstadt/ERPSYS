<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <DockerDefaultTargetOS>Windows</DockerDefaultTargetOS>
    <AssemblyName>ERPSYS.MVC</AssemblyName>
    <RootNamespace>ERPSYS.MVC</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="hibernate.cfg.xml" />
    <None Remove="Mapeamentos\Endereco.hbm.xml" />
    <None Remove="Mapeamentos\Fornecedor.hbm.xml" />
    <None Remove="Mapeamentos\Pessoa.hbm.xml" />
    <None Remove="Mapeamentos\Usuario.hbm.xml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="hibernate.cfg.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Mapeamentos\Endereco.hbm.xml" />
    <EmbeddedResource Include="Mapeamentos\Fornecedor.hbm.xml" />
    <EmbeddedResource Include="Mapeamentos\Pessoa.hbm.xml" />
    <EmbeddedResource Include="Mapeamentos\Usuario.hbm.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.1.2" PrivateAssets="All" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.4.10" />
    <PackageReference Include="NHibernate" Version="5.2.5" />
    <PackageReference Include="NHibernate.Caches.SysCache" Version="5.5.1" />
    <PackageReference Include="Ninject" Version="3.3.4" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Infra\" />
    <Folder Include="Interfaces\" />
  </ItemGroup>

</Project>
