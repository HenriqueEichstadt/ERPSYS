@model IEnumerable<ERPSYS.MVC.Models.Cliente>

@section Styles{
  <link rel="stylesheet" href="~/css/Table/table.css" />
}
<title>Cadastrar novo cliente</title>
<div class="main-content">
    <div class="content-heading clearfix">
        <div class="heading-left">
            <h1 class="page-title">Cadastros</h1>
            <p class="page-subtitle">Clientes cadastrados</p>
        </div>
        <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#">Cadastros</a></li>
            <li><a href="#">Clientes cadastrados</a></li>
        </ul>
    </div>
      <div class="col-md-11 col-md-offset-1">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Clientes</h3>
                  </div>
                  <div class="col col-xs-6 text-right">
                    <button type="button" class="btn btn-sm btn-primary btn-create">Adicionar Novo</button>
                  </div>
                </div>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>        
            <th>
                @Html.DisplayNameFor(model => model.Pessoa.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa.CPFCNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInclusao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioInclusao.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioAlteracao.Nome)
            </th>
             <th></th>
      </thead>
    <tbody>
                  @foreach (var item in Model)
                  {
                      <tr>
                          <td align="center">
                              <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                              <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.Id)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.Pessoa.CPFCNPJ)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.Pontos)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.Ativo)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.DataInclusao)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.DataAlteracao)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.UsuarioInclusao.Nome)
                          </td>
                          <td>
                              @Html.DisplayFor(modelItem => item.UsuarioAlteracao.Nome)
                          </td>
                      </tr>
                  }
                  </tbody>
                </table>
            
              </div>
              <div class="panel-footer">
                <div class="row">
                  <div class="col col-xs-4">Page 1 of 5
                  </div>
                  <div class="col col-xs-8">
                    <ul class="pagination hidden-xs pull-right">
                      <li><a href="#">1</a></li>
                      <li><a href="#">2</a></li>
                      <li><a href="#">3</a></li>
                      <li><a href="#">4</a></li>
                      <li><a href="#">5</a></li>
                    </ul>
                    <ul class="pagination visible-xs pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
      </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}