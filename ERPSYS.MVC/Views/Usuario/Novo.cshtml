@model Usuario
<title>Cadastro de usuário</title>
<div class="main-content">
    <div class="content-heading clearfix">
        <div class="heading-left">
            <h1 class="page-title">Formulário</h1>
            <p class="page-subtitle">Cadastrar novo funcionário</p>
        </div>
        <ul class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-home"></i> Home</a>
            </li>
            <li>
                <a href="#">Formulário</a>
            </li>
            <li>
                <a href="#">Cadastrar novo funcionário</a>
            </li>
        </ul>
    </div>


    <form asp-action="AdicionarNovo" id="FormAdd" method="post">
        <div class="form-horizontal">
            <div class="panel-body">
                <div class="form-group">

                    <div class="col-md-11 control-label">
                        <p class="help-block">
                            <h11>*</h11> Campo Obrigatório
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        <h3>Dados do Funcionário:</h3>
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label">Nivel de acesso <h11>*</h11></label>
                    <div class="col-md-4">
                        <label class="radio-inline" for="funcionarioNivelAcessoA">
                            <input asp-for="@Model.NivelAcesso" value="A" id="funcionarioNivelAcessoA" type="radio">
                            Administrador
                        </label>
                        <label class="radio-inline" for="funcionarioNivelAcessoN">
                            <input asp-for="@Model.NivelAcesso" id="funcionarioNivelAcessoN" value="N" type="radio">
                            Normal
                        </label>
                        <span asp-validation-for="NivelAcesso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Nome">Nome <h11>*</h11></label>
                    <div class="col-md-5">
                        <input asp-for="@Model.Nome" id="Nome" placeholder="Nome do funcionário" class="form-control input-md" type="text">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="apelido">Apelido <h11>*</h11></label>
                    <div class="col-md-5">
                        <input asp-for="@Model.Apelido" id="apelido" placeholder="Nome do funcionário" class="form-control input-md" type="text">
                        <span asp-validation-for="Apelido" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="email">Email <h11>*</h11></label>
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope"></i>
                            </span>
                            <input asp-for="@Model.Email" id="email" class="form-control" placeholder="funcionario@email.com" type="email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Nome">Senha <h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.Senha" id="senhaPrincipal" placeholder="Digite sua senha" class="form-control input-md" type="password">
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="senhaDois">Repita a senha <h11>*</h11></label>
                    <div class="col-md-3">
                        <input id="senhaDois" name="senhaRepetida" placeholder="Digite sua senha novamente" class="form-control input-md" type="password">
                    </div>
                </div>
                <!-- Botão Cadastrar e Cancelar -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Cadastrar"></label>
                    <div class="col-md-8">
                        <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Cadastrar</button>
                        <button id="Cancelar" name="Cancelar" class="btn btn-danger" onclick="window.location.href = '/Usuario/Cadastrados'" type="reset">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/Template/TemplateADMIN/assets/scripts/templateAdminScripts.js"></script>
    <script src="~/js/Form/usuarioForm.js"></script>
}