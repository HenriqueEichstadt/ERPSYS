@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title> Autenticação </title>
    <link rel="stylesheet" href="~/Template/TemplateADMIN/assets/vendor/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/Template/TemplateADMIN/TelaLogin/loginstyle.css">
    <link rel="stylesheet" type="text/css" href="~/Template/KlorofilPro.min.css">
</head>
<body>
<div class="login-box">
        <form asp-action="Autenticar" id="loginForm" method="post">
            <h1 id="logoPosto"></h1>
        <p>Usuário</p>
        <input type="text" name="apelido" id="apelido" placeholder=" Nome de usuário">
        <p>Senha</p>
        <input type="password" name="senha" id="senha" placeholder=" Sua senha">
        <input type="submit" name="submit" value="Entrar" autofocus>
    </form>
</div>
</body>
</html>
