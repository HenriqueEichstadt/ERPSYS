
@model Produto

<title>Editar Cadastro de Produto</title>
<div class="main-content">
    <div class="content-heading clearfix">
        <div class="heading-left">
            <h1 class="page-title">Formulário</h1>
            <p class="page-subtitle">Editar produto</p>
        </div>
        <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#">Formulário</a></li>
            <li><a href="#">Editar produto</a></li>
        </ul>
    </div>


    <form asp-action="UpdateProduto" id="FormAdd" method="post">
        <div class="form-horizontal">
            <div class="panel-body" id="formCadastro">
                <div class="form-group">

                    <div class="col-md-11 control-label">
                        <p class="help-block">
                            <h11>*</h11> Campo Obrigatório
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 control-label">
                        <h3>Dados do Produto:</h3>
                    </div>
                </div>
                
                <input asp-for="@Model.Ativo" id="clienteAtivo" type="hidden" readonly>
                <input asp-for="@Model.DataInclusao" id="clienteDataInclusao" type="hidden" readonly>
                <input asp-for="@Model.DataAlteracao" id="clienteDataAlteracao" type="hidden" readonly>
                <input asp-for="@Model.UsuarioInclusaoId" id="clienteUsuarioInclusaoId" type="hidden" readonly>
                <input asp-for="@Model.UsuarioAlteracaoId" id="clienteUsuarioAlteracaoId" type="hidden" readonly>
                
                <div class="form-group">
                    <label class="col-md-2 control-label" for="produtoId">Id <h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.Id" id="produtoId" readonly name="estoque.Id" placeholder="Nome do produto" class="form-control input-md" type="text">
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="nomeproduto">Nome <h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.Nome" id="nomeproduto" placeholder="Nome do produto" class="form-control input-md" type="text">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="marca">Marca<h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.Marca" id="marca" placeholder="Marca do produto" class="form-control input-md" type="text">
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                </div>
                <!-- Multiple Radios (inline) -->

                <div class="form-group">
                    <label class="col-md-2 control-label" id="Genero" for="Genero">Categoria <h11>*</h11></label>
                    <div class="col-md-3">
                        <select asp-for="@Model.Categoria" id="categoria" class="form-control input-md">
                            <option value="P">Produto</option>
                        </select>
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="precoVenda">Preço de Venda<h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.PrecoVenda" id="precoVenda" placeholder="R$ 00,00" class="form-control input-md" type="text"> <!-- onkeyup="CalculaPontosAutomaticamente();" -->
                        <span asp-validation-for="PrecoVenda" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="precoCusto">Preço de Custo<h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.PrecoCusto" id="precoCusto" placeholder="R$ 00,00" class="form-control input-md" type="text">
                        <span asp-validation-for="PrecoCusto" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="precoVenda">Estoque Atual<h11>*</h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.EstoqueAtual" value="" id="estoqueAtual" placeholder="" class="form-control input-md" type="number">
                        <span asp-validation-for="EstoqueAtual" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="limiteEstoque">Limite de Estoque<h11></h11></label>
                    <div class="col-md-3">
                        <input asp-for="@Model.LimiteEstoque" id="limiteEstoque" value="" placeholder="" class="form-control input-md" type="number">
                        <span asp-validation-for="LimiteEstoque" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="observacoes">Descrição</label>
                    <div class="col-md-3">
                        <textarea asp-for="@Model.Descricao" id="observacoes" class="form-control input-md" type="text"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="dataFabricacao">Data Fabricação</label>
                    <div class="col-md-2">
                        <input asp-for="@Model.DataFabricacao" id="dataFabricacao" placeholder="DD/MM/AAAA" class="form-control input-md" type="date" OnKeyPress="formatar('##/##/####', this)" onBlur="showhide()">
                        <span asp-validation-for="DataFabricacao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Validade">Validade<h11>*</h11></label>
                    <div class="col-md-2">
                        <input asp-for="@Model.Validade" id="Validade" placeholder="DD/MM/AAAA" class="form-control input-md" type="date" OnKeyPress="formatar('##/##/####', this)" onBlur="showhide()">
                        <span asp-validation-for="Validade" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="trocapontos">Troca por Pontos</label>
                    <div class="col-md-3">
                        <input asp-for="@Model.QtdPontosProgFidelidade" id="trocapontos" placeholder="" class="form-control input-md" type="text">
                        <span asp-validation-for="QtdPontosProgFidelidade" class="text-danger"></span>
                    </div>
                </div>

                <hr>
                <!-- Botão Cadastrar e Cancelar -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Cadastrar"></label>
                    <div class="col-md-8">
                        <button id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit">Salvar</button>
                        <button id="Cancelar" name="Cancelar" class="btn btn-danger" onclick="window.location.href='/Estoque/Produtos'">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts{
    <script src="~/Template/TemplateADMIN/assets/scripts/templateAdminScripts.js"></script>
    <script src="~/js/Form/FormPessoa.js"></script>
}
