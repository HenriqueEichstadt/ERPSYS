<div class="alert alert-warning alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><i class="icon fa fa-warning"></i> Atenção</h4>
    Adicione aqui as validações
</div>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Nova Venda</h3>
            <div class="box-tools">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
        </div>

        <form id="frmSales" action="inventory/sales-save" method="post">
            <div class="box-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="sales_no">Número da venda</label>
                        <input type="text" name="sales_no" id="sales_no" class="form-control" value="1003">
                    </div>
                    <div class="form-group">
                        <label for="item_id">Seleção de Item</label>
                        <select name="item_id" id="item_id" class="form-control change-price select2">
                            <option value="1">1001 - Test Item 01</option>
                            <option value="2">1002 - Test Item 02</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantidade</label>
                        <input type="text" name="quantity" id="quantity" class="form-control" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label for="price">Preço por unidade</label>
                        <input type="text" name="price" id="price" class="form-control" placeholder="Deixe em branco para selecionar o preço padrão">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="sales_date">Data da venda</label>
                        <input type="text" name="sales_date" id="sales_date" class="form-control datepicker"
                               value="01/01/2019">
                    </div>
                    <div class="form-group">
                        <label for="customer_id">Cliente &nbsp;&nbsp;</label>
                        <select name="customer_id" id="customer_id" class="form-control select2 col-md-6">
                            <option value="1">Cliente 1</option>
                            <option value="2">Cliente 2</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="notes">Observações</label>
                        <textarea name="notes" id="notes" rows="3" class="form-control" placeholder="Opcional..."></textarea>
                    </div>
                </div>
            </div>

            <input type="hidden" name="csrf_test_name" value="3a59fb028421bd64fb4ccf2aee90e89b">
            <div class="box-footer" align="center">
                <button type="button" id="sales_add_item" class="btn btn-primary">
                    <strong>Add Item</strong>
                </button>
            </div>
        </form>
    </div>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Itens da Venda</h3>
            <div class="box-tools">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="box-body" id="sales_details">
            <table id="sales_details_table" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Preço da unidade</th>
                    <th>Preço Total</th>
                    <th>Ação</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="6">Order Totals</th>
                </tr>
                <tr>
                    <td colspan="2">&nbsp;</td>
                    <td>0</td>
                    <td></td>
                    <td>0.00</td>
                    <td></td>
                </tr>
                <tr>
                    <td colspan="4" class="right">Sales TAX</td>
                    <td>0.00</td>
                    <td></td>
                </tr>

                <tr>
                    <td colspan="4">Total Paid Amount</td>
                    <td>
                        <input type="text" name="paid_amount" id="paid_amount" placeholder="Total Paid Amount"
                               value="">
                    </td>
                    <td></td>
                </tr>
                </tfoot>
            </table>
        </div>

        <div class="box-footer" align="center">
            <input type="button" id="sales_complete" class="btn btn-success" value="Complete Sales Entry">
        </div>
    </div>
</section>
<div class="modal modal-info fade" id="modal-customer" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span
                        aria-hidden="true">
                        &times;
                    </span>
                </button>
                <h4 class="modal-title">Customer Entry Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="code">Customer Code</label>
                    <input type="text" name="code" id="code" value="1003" class="form-control" placeholder="Customer Code">
                    Digit Only
                </div>
                <div class="form-group">
                    <label for="name">Customer Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Customer Name">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea name="address" id="address" class="form-control" placeholder="Customer Address"></textarea>
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile</label>
                    <input type="text" name="mobile" id="mobile" class="form-control" placeholder="Customer Mobile Number">
                </div>
                <div class="form-group">
                    <label for="country">Country</label>
                    <input type="text" name="country" id="country" class="form-control" placeholder="Customer Country">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" class="form-control" placeholder="Customer Email Address">
                </div>
                <div class="form-group">
                    <label for="notes">Notes</label>
                    <textarea name="notes" id="notes" class="form-control" placeholder="Customer Notes"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                <button type="button" id="add_customer" class="btn btn-outline">Save changes</button>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts{
    <script src="~/Template/TemplateADMIN/assets/scripts/templateAdminScripts.js"></script>
    <script src="~/js/Form/vendaForm.js"></script>
}