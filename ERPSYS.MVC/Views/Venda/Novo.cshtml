        </li>
    </ul>
</div>

@section Styles{

    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Template/TemplateADMIN/Venda/datatables.min.css"/>
    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/_all-skins.min.css">
    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/bootstrap3-wysihtml5.min.css">
    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/select2.min.css">
    <link rel="stylesheet" href="~/Template/TemplateADMIN/Venda/select2-bootstrap.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
