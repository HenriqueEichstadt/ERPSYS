<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="ERPSYS.MVC"
                   namespace="ERPSYS.MVC.Models">
  <class name="Endereco">
    <cache usage="nonstrict-read-write"/>
    <id name="Id">
      <generator class="identity"/>
    </id>
    <one-to-one name="PessoaId" class="Pessoa"/>
    <one-to-one name="FornecedorId" class="Fornecedor" />
    <property name="Rua"/>
    <property name="Numero" />
    <property name="Bairro" />
    <property name="Complemento" />
    <property name="Estado" />
    <property name="Cidade" />
    <property name="CEP" />
    <property name="DataInclusao" />
    <property name="DataAlteracao" />
    <one-to-one name="UsuarioInclusao" class="Usuario" />
    <one-to-one name="UsuarioAlteracao" class="Usuario" />
  </class>
</hibernate-mapping>